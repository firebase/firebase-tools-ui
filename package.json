    "@rmwc/theme": "^7.0.3",
    "@rmwc/tooltip": "^7.0.3",
    "@rmwc/top-app-bar": "^7.0.3",
    "@rmwc/types": "^7.0.3",
    "@rmwc/typography": "^7.0.3",
    "@rooks/use-key": "^4.0.0",
    "@types/codemirror": "^5.60.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/recompose": "^0.30.7",
    "@vitejs/plugin-react": "^1.3.2",
    "blob-polyfill": "^7.0.20220408",
    "classnames": "^2.2.6",
    "codemirror": "^5.61.1",
    "express": "^4.17.1",
    "firebase": "^10.7.1",
    "font-awesome": "^4.7.0",
    "immer": "^9.0.14",
    "keycode": "^2.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "lodash.groupby": "^4.6.0",
    "lodash.isequal": "^4.5.0",
    "node-fetch": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.1.0",
    "react-dropzone": "^14.2.1",
    "react-focus-on": "3.6",
    "react-hook-form": "^7.31.2",
    "react-markdown": "^8.0.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^5.3.0",
    "react-router-dom-v5-compat": "^6.3.0",
    "reactfire": "^4.2.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "rxjs": "^7.0.0",
    "swr": "^1.3.0",
    "tslib": "^2.4.0",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.8.2",
    "vite": "^5.0.10",
    "vite-plugin-checker": "^0.5.0",
    "vite-plugin-node": "^3.1.0",
    "vite-plugin-svgr": "^4.2.0"
  },
  "overrides": {
    "reactfire": {
      "firebase": "^10.7.1"
    },
    "vite-plugin-node": {
      "vite": "$vite"
    },
    "vite-plugin-checker": {
      "vite": "$vite"
    }
  },
  "scripts": {
    "start": "vite",
    "build": "npm run build:web && npm run build:server",
    "bundle": "rm -f emulator-ui-dist.zip && cd dist && zip -r ../emulator-ui-dist.zip *",
    "build:web": "vite build",
    "build:server": "vite build --mode server",
    "test": "node scripts/test.js --env=./custom-jest-environment.js",
    "test:coverage": "node scripts/test.js --coverage --watchAll=false --env=./custom-jest-environment.js",
    "lint": "prettier --check . && NODE_ENV=development eslint --ext .js,.jsx,.ts,.tsx src/",
    "lint:fix": "NODE_ENV=development eslint --ext .js,.jsx,.ts,.tsx src/ && npm run format",
    "fmt": "npm run format",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "7.21.0",
    "@firebase/auth-interop-types": "^0.1.4",
    "@firebase/component": "^0.5.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@testing-library/react": "^13.2.0",
    "@types/express": "^4.17.21",
    "@types/gtag.js": "^0.0.11",
    "@types/jest": "^26.0.0",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.groupby": "^4.6.7",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.keyby": "^4.6.7",
    "@types/node": "^18.0.0",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.0",
    "@types/redux-mock-store": "^1.0.2",
    "babel-jest": "^27.4.2",
    "babel-preset-react-app": "^10.0.1",
    "confusing-browser-globals": "^1.0.11",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "globalthis": "^1.0.1",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "import-sort-config": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.4.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-resolve": "^27.4.2",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^13.0.0",
    "lodash.keyby": "^4.6.0",
    "mutationobserver-shim": "^0.3.3",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "0.0.7",
    "react-app-polyfill": "^3.0.0",
    "react-dev-utils": "^12.0.1",
    "redux-mock-store": "^1.5.4",
    "run-script-os": "^1.1.6",
    "sass": "^1.52.1",
    "web-streams-polyfill": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "importSort": {
    ".js, .jsx, .es6, .es, .mjs, .ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/config/jest/babelTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true,
    "restoreMocks": true
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
